{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"dev": "tsx watch -r tsconfig-paths/register src/index.ts",
		"start": "node dist/index.js",
		"build": "tsc",
		"type-check": "tsc --noEmit",
		"format": "biome format --write",
		"format:check": "biome check",
		"lint": "biome lint",
		"lint:fix": "biome lint --write",
		"check": "biome check --write",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,js,json,md}": [
			"biome check --write"
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.20.0",
	"dependencies": {
		"dotenv": "^17.2.3",
		"express": "^5.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
